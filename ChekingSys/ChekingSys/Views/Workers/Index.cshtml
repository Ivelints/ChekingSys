@model IEnumerable<ChekingSys.Models.Worker>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Workers List</h2>
        </div>
        <div class="col-6 text-right">
            <a  asp-controller="Workers" asp-action="Create" class="btn btn-primary">
                Create New Worker Table
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Worker Name
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        1
                    </th>
                    <th>
                        2
                    </th>
                    <th>
                        3
                    </th>
                    <th>
                        4
                    </th>
                    <th>
                        5
                    </th>
                    <th>
                        6
                    </th>
                    <th>
                        7
                    </th>
                    <th>
                        8
                    </th>
                    <th>
                        9
                    </th>
                    <th>
                        10
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="20%">@obj.NamеSurname</td>
                    <td width="15%">@obj.Position</td>
                    <td width="5%">@obj.M1</td>
                    <td width="5%">@obj.M2</td>
                    <td width="5%">@obj.M3</td>
                    <td width="5%">@obj.M4</td>
                    <td width="5%">@obj.M5</td>
                    <td width="5%">@obj.M6</td>
                    <td width="5%">@obj.M7</td>
                    <td width="5%">@obj.M8</td>
                    <td width="5%">@obj.M9</td>
                    <td width="5%">@obj.M10</td>
                    <td></td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Workers List exixts.</p>
    }

</div>
