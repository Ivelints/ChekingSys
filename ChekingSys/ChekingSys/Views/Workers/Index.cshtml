@model IEnumerable<ChekingSys.Models.Worker>
<!-- Here you can see the table of the workers and the information about them inside the database, the buttons for editting, deleting and making a new entry inside the list and the view code. -->
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Workers List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Workers" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> &nbsp; Create New Worker Table
            </a>
        </div>
    </div>
    <style>
    body { background-image: url('https://image.freepik.com/free-photo/table-top-with-background_1404-29.jpg'); 
           background-repeat: no-repeat; 
           background-attachment: fixed; 
           background-size: cover; }
    </style>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Worker Name
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Shift
                    </th>
                    <th>
                        Worked days
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.NamеSurname</td>
                        <td width="20%">@obj.Position</td>
                        <td width="20%">@obj.Shift</td>
                        <td width="20%">@obj.Workedays</td>
                        <td>
                            <div class=" w-75 btn-group" role="group">
                                <a asp-controller="Workers" asp-route-Id="@obj.ID" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-user-edit"></i> Edit
                                </a>
                                <a asp-controller="Workers" asp-route-Id="@obj.ID" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-user-minus"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Workers List exixts.</p>
    }

</div>
